// }

// Get high resolution optimized image properties: src, width, height
const maxWidth = 2000
const highResWidth = Math.min(width, maxWidth)
const highResImageData = await getImage({
    src: url,
    alt: defaultAlt,
    width: highResWidth,
    height: highResWidth*aspect,
})
