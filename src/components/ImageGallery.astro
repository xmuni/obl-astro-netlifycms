import GalleryThumbnail from "./GalleryThumbnail.astro";

type ImageData = {
    url: string,
    folder: string,
    filename: string,
    name: string,
    public_id: string,
    width: number,
    height: number,
    format: string,
}

const { imagesByCategory } = Astro.props

